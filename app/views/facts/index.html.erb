<p id="notice"><%= notice %></p>

<%= link_to 'New Fact', new_fact_path %>
<h1>fakopedia</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <center>
    <% @facts.each do |fact| %>
      <div style="max-width: 500px; margin-top: 100px"></div>
        <td><%= fact.body %></td>
        <td><%= image_tag fact.image, style:"max-width: 500px" %></td>
        </div>
        <td><%= link_to 'Show', fact %></td>
        <td><%= link_to 'Edit', edit_fact_path(fact) %></td>
        <td><%= link_to 'Destroy', fact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
     
      </tr>
    <% end %>
  </center>
</table>

<br>


